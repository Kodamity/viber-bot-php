{
    "name": "laramity/viber-bot-php",
    "description": "Php bot interface to work with Viber API",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "viber",
        "im",
        "bot"
    ],
    "authors": [
        {
            "name": "Novikov Bogdan",
            "email": "hcbogdan@gmail.com"
        },
        {
            "name": "Misha Serenkov",
            "email": "mi.serenkov@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.15",
        "friendsofphp/php-cs-fixer": "^3.2",
        "monolog/monolog": "^3.0",
        "phpro/grumphp": "^2.7",
        "phpstan/phpstan": "^1.12",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Viber\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Viber\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "phpro/grumphp": true
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}
